<style>
  .nermy {
    background: linear-gradient(180deg, #6C6C6C 0%, #040711 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .instructions {
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions p {
    margin: 0;
  }
  .animate-fade-in {
    animation: fadeIn 1s ease-in-out;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .link-animate {
    position: relative;
    transition: transform 0.2s ease, color 0.2s ease;
  }
  .link-animate:hover .hidden-text {
    opacity: 1;
    transform: translateY(0);
  }
  .hidden-text {
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  .logo {
    font-size: 2rem;
    transition: transform 0.2s ease;
  }
  .link-animate:hover .logo {
    transform: scale(1.1);
    color: #e91e63;
  }
  #gameCanvas {
    width: 400px;
    height: 300px;
    background: #fff;
    border: 2px solid #333;
  }
</style>

<script>
  let spaceCount = 0;
  let tapCount = 0;
  let gameStarted = false;

  // Detect spacebar or tap presses
  document.addEventListener('keydown', (event) => {
    if (event.code === 'Space') {
      spaceCount++;
      checkGameStart();
    }
  });
  
  document.addEventListener('click', () => {
    tapCount++;
    checkGameStart();
  });

  function checkGameStart() {
    if (spaceCount >= 5 || tapCount >= 5) {
      startGame();
    }
  }

  function startGame() {
    if (!gameStarted) {
      gameStarted = true;
      document.getElementById('gameCanvas').classList.remove('hidden');
      runFlappyBirdGame();
    }
  }

  function runFlappyBirdGame() {
    // Example implementation for a basic Flappy Bird game
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    
    let birdY = canvas.height / 2;
    let gravity = 0.6;
    let lift = -10;
    let velocity = 0;

    function draw() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.fillStyle = '#000';
      ctx.fillRect(50, birdY, 20, 20);

      velocity += gravity;
      birdY += velocity;

      if (birdY > canvas.height || birdY < 0) {
        birdY = canvas.height / 2; // Reset position if the bird hits the top or bottom
        velocity = 0;
      }

      requestAnimationFrame(draw);
    }

    draw();

    // Make the bird "jump" on spacebar or tap
    document.addEventListener('keydown', (event) => {
      if (event.code === 'Space') {
        velocity = lift;
      }
    });

    document.addEventListener('click', () => {
      velocity = lift;
    });
  }
</script>
