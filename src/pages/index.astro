---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Aditya">
  <main class="flex justify-center h-screen items-center px-4 bg-black">
    <div class="text-center">
      <h1 class="text-7xl font-bold mb-10">
        <span class="text-gray-300 nermy">Aditya</span>
      </h1>
      
      <div class="instructions bg-neutral-900 max-w-3xl border border-neutral-800 shadow-lg">
        <p class="text-lg font-bold text-gray-200 mt-4">
          Hi!
        </p>
        
        <div class="flex flex-wrap justify-center mt-8 space-x-4 border-t border-neutral-800 pt-6">
          <!-- Logos with hover effects showing names -->
          <a class="social-link hover-effect" href="https://youtube.com/@adityaredflag" aria-label="YouTube">
            <img src="path/to/youtube-logo.png" alt="YouTube" class="icon">
            <span class="link-name">YouTube</span>
          </a>
          <a class="social-link hover-effect" href="https://www.roblox.com/users/3507400125/profile" aria-label="Roblox">
            <img src="path/to/roblox-logo.png" alt="Roblox" class="icon">
            <span class="link-name">Roblox</span>
          </a>
          <a class="social-link hover-effect" href="https://twitter.com/adityaREDFLAG" aria-label="Twitter">
            <img src="path/to/twitter-logo.png" alt="Twitter" class="icon">
            <span class="link-name">Twitter</span>
          </a>
          <a class="social-link hover-effect" href="https://github.com/adityaREDFLAG" aria-label="GitHub">
            <img src="path/to/github-logo.png" alt="GitHub" class="icon">
            <span class="link-name">GitHub</span>
          </a>
          <a class="social-link hover-effect" href="https://discord.com/invite/N9KD7au6hB" aria-label="Discord">
            <img src="path/to/discord-logo.png" alt="Discord" class="icon">
            <span class="link-name">Discord</span>
          </a>
          <a class="social-link hover-effect" href="https://www.instagram.com/noblixzy/" aria-label="Instagram">
            <img src="path/to/instagram-logo.png" alt="Instagram" class="icon">
            <span class="link-name">Instagram</span>
          </a>
          <a class="social-link hover-effect" href="mailto:adi.redflag@gmail.com" aria-label="Email">
            <img src="path/to/email-logo.png" alt="Mail" class="icon">
            <span class="link-name">Mail</span>
          </a>
        </div>

        <!-- Spotify song embed -->
        <div class="spotify mt-8">
          <iframe src="https://open.spotify.com/embed/playlist/0LvYmZs7u4gUEh2e1z7Yk3" width="300" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .nermy {
    background: linear-gradient(180deg, #6C6C6C 0%, #040711 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .instructions {
    padding: 1.5rem;
    border-radius: 8px;
  }

  .social-link {
    display: inline-block;
    text-align: center;
    margin: 0 1rem;
  }
  
  .icon {
    width: 40px;
    height: 40px;
    transition: transform 0.3s ease;
  }
  
  .link-name {
    display: none;
    margin-top: 0.5rem;
    color: #fff;
    font-size: 1rem;
  }
  
  .hover-effect:hover .icon {
    transform: scale(1.2);
  }
  
  .hover-effect:hover .link-name {
    display: block;
  }

  .spotify {
    margin-top: 20px;
    text-align: center;
  }
</style>
